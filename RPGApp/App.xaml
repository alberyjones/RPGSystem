<Application x:Class="RPGApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RPGApp"
             xmlns:converter="clr-namespace:RPGApp.Converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converter:HeightDisplayConverter x:Key="heightDisplayConverter" />
        <converter:WeightDisplayConverter x:Key="weightDisplayConverter" />
        <converter:CharacterStrengthDisplayConverter x:Key="characterStrengthDisplayConverter" />
        <converter:CharacterDexterityDisplayConverter x:Key="characterDexterityDisplayConverter" />
        <converter:CharacterConstitutionDisplayConverter x:Key="characterConstitutionDisplayConverter" />
        <converter:CharacterIntelligenceDisplayConverter x:Key="characterIntelligenceDisplayConverter" />
        <converter:CharacterWisdomDisplayConverter x:Key="characterWisdomDisplayConverter" />
        <converter:CharacterCharismaDisplayConverter x:Key="characterCharismaDisplayConverter" />
    </Application.Resources>
</Application>
